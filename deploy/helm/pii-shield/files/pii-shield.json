{
  "uid": "pii-shield",
  "title": "PII Shield",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Chat request rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(pii_shield_chat_requests_total[5m]))",
          "legendFormat": "requests/sec"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Error rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * sum(rate(pii_shield_chat_requests_total{status=\"error\"}[5m])) / sum(rate(pii_shield_chat_requests_total[5m]))",
          "legendFormat": "error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Redacted request rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(pii_shield_redacted_requests_total[5m]))",
          "legendFormat": "redacted/sec"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 0
      }
    },
    {
      "type": "timeseries",
      "title": "Chat latency p95",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(pii_shield_chat_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 seconds"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Redaction ratio p95",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * histogram_quantile(0.95, sum(rate(pii_shield_redaction_ratio_bucket[5m])) by (le))",
          "legendFormat": "p95 %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Redactions by type",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(pii_shield_pii_redactions_total[5m])) by (pii_type)",
          "legendFormat": "{{pii_type}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 8
      }
    }
  ]
}
